<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"

    android:paddingTop="15dp"
    android:paddingRight="15dp"
    tools:context=".user.Create_issue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo_fix" />

            <TextView
                android:id="@+id/userCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtcreate_issue"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="เลขที่ใบแจ้งซ่อม :"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Create_issue"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Create Issue"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtcreate_by"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="ผู้แจ้ง"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Create_by"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:text="Create_by"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="วันที่และเวลาที่แจ้ง :"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Record_date"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:text="Record date"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_category"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="หมวดหมูงาน :"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/SpinCategory"
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:background="@drawable/spinner"
                    android:spinnerMode="dialog" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_subcategory"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="หมวดหมูงานย่อย :"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/SpinSCategory"
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:background="@drawable/spinner"
                    android:spinnerMode="dialog" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/TXT_Category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TXT_Category" />

                <TextView
                    android:id="@+id/TXT_SCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TXT_SCategory" />

                <TextView
                    android:id="@+id/put"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_place"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="สถานที่ :"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Place"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="ตัวอย่างเช่น อาคาร 8"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_Level"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="ชื่อห้องหรือชั้น :"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ตัวอย่างเช่น ห้องสมุด หรือชั้น 3"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_Problem"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="อาการ หรือปัญหา :"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Problem"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:gravity="top"
                    android:hint="ตัวอย่างเช่น หลอดไฟเปิดไม่ติด ฯลฯ"
                    android:inputType="text|textMultiLine"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_Pic"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="แนบภาพ"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_choose"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="top"
                    android:background="@drawable/camera" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:id="@+id/Pic_issue"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:indeterminateTint="@color/Gold"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_capsult"
            android:text="บันทึกข้อมูล" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bottomBar"
        android:layout_alignParentBottom="true">

        <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottomNavView_Bar"
            android:background="@color/White"
            app:menu="@menu/navigation_user"
            app:itemIconTint="@drawable/selector_bottombar_item"
            app:itemTextColor="@drawable/selector_bottombar_text">


        </android.support.design.widget.BottomNavigationView>
    </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="15dp"
    android:paddingRight="15dp"
    tools:context=".manager.Managepending">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:scrollbars="none">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

         <ImageView
             android:id="@+id/imageView"
             android:layout_width="160dp"
             android:layout_height="120dp"
             android:layout_gravity="center"
             app:srcCompat="@drawable/logo_fix" />

         <TextView
             android:id="@+id/USERID"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:visibility="gone" />

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txtissue"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="เลขที่ใบคำร้อง :"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/issueID"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="issueID"
                android:textSize="19dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>
         </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txtcreateby"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="ผู้แจ้งซ่อม :"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Createby"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Create By"
                android:textSize="15dp"
                android:textStyle="bold" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txtproblem"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="ปัญหาแจ้งซ่อม :"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Problem"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:text="Problem"
                android:textSize="15dp"
                android:textStyle="bold" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txtplace"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="สถานที่ :"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Place"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Place"
                android:textSize="15dp"
                android:textStyle="bold" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txtasm_by"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="ช่างที่รับผิดชอบ :"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Assessment_by"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Assessment by"
                android:textSize="15dp"
                android:textStyle="bold" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txtprice"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="อุปกรณ์ที่ใช้ในการซ่อม :"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Euipment_used"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:text="Euipment_used"
                android:textSize="15dp"
                android:textStyle="bold" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="ราคาประมาณการของบ :"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="19dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:id="@+id/txtDpeice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  บาท"
                android:textSize="15dp"
                android:textStyle="bold" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txtapprove_date"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="วันที่ขออนุมัติงบ :"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Approve_date"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Approve_date"
                android:textSize="15dp"
                android:textStyle="bold" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txtsent_approve"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="ผู้ส่งใบคำร้องขออนุมัติ :"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sentapprove_by"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="sentapprove_by"
                android:textSize="15dp"
                android:textStyle="bold" />
         </LinearLayout>


      </LinearLayout>
   </ScrollView>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_weight="1"
       android:gravity="center|bottom"
       android:orientation="horizontal">

      <Button
          android:id="@+id/btn_approve"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/btn_capsult"
          android:text="อนุมัติ" />

      <View
          android:layout_width="20dp"
          android:layout_height="2dp"
          android:layout_gravity="center"
          android:layout_margin="10dp"></View>

      <Button
          android:id="@+id/btn_noapprove"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@drawable/btn_capsult"
          android:text="ไม่อนุมัติ" />
   </LinearLayout>

   </LinearLayout>